{
  "manifest_version": 3,
  "name": "WriteRight",
  "version": "1.0",
  "description": "An extension that automatically sets the writing direction of input elements and allows the user to override it with keyboard shortcuts.",
  "permissions": [],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "match_about_blank": true,
      "all_frames": true,
      "run_at": "document_end",
      "js": ["direction-switcher.js"]
    }
  ],
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  }
}